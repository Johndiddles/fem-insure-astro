---
export interface Props {
  imgSrc: string;
  imgAlt: string;
  title: string;
  text: string;
}

const { imgSrc, imgAlt, title, text } = Astro.props as Props;
---

<div class="flex flex-col gap-5">
  <div class="mx-auto md:ml-0 mb-4">
    <img src={imgSrc} alt={imgAlt} />
  </div>
  <h3 class="text-3xl text-primary font-display">{title}</h3>
  <p class="text-accent">{text}</p>
</div>
